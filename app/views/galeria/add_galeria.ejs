<body>
  <%- include("../partes/header", { flagAdmin: flagAdmin, codLogado: codLogado }) %>

  <main class="container mt-5">
    <div class="p-4 p-md-5 mb-4 text-white rounded bg-dark">
        <div class="col-md-6 px-0">
            <h1 class="display-4 fst-italic">Adicionar Nova Imagem</h1>
            <p class="lead my-3">Preencha o formulário abaixo para adicionar uma nova imagem à galeria.</p>
        </div>
    </div>

    <div class="album mb-4 py-5 bg-dark text-white rounded">
        <div class="container">
            <% if (validacao) { %>
                <div>
                    <ul>
                        <% validacao.forEach(function(erro) { %>
                            <li><%= erro.msg %></li>
                        <% }); %>
                    </ul>
                </div>
            <% } %>

            <form action="/salva_galeria" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="titulo" class="form-label">Título da Imagem</label>
                    <input type="text" class="form-control" id="titulo" name="titulo" value="<%= galeria.titulo %>" required>
                </div>
                <div class="mb-3">
                    <label for="descricao" class="form-label">Descrição da Imagem</label>
                    <textarea class="form-control" id="descricao" name="descricao" rows="3" required><%= galeria.descricao %></textarea>
                </div>
                <div class="mb-3">
                    <label for="img" class="form-label">Selecione a Imagem</label>
                    <input type="file" class="form-control" id="img" name="img" accept="image/*" required>
                </div>
                <button type="submit" class="btn btn-primary">Adicionar Imagem</button>
            </form>
        </div>
    </div>
</main>

